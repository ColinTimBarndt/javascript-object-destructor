{
  "compilerOptions": {
    "incremental": true,
    "moduleResolution": "Node",
    "module": "ES2020",
    "target": "ES2021",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2020", "ES2021.WeakRef", "dom"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "rollup.config.ts",
    "src/**/*"
  ]
}